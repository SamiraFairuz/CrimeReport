<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    tools:context=".UpdateStatus">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Crime Status"
        android:id="@+id/topText"
        android:textColor="#ff0000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50sp"
        android:textSize="20sp"
        android:textAlignment="center"
        />
    <ImageView
        android:layout_width="120sp"
        android:layout_height="60dp"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/topText"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:layout_below="@id/image"
        android:text="Crime Area"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_alignStart="@+id/desc"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:layout_below="@id/area"
        android:textSize="15sp"
        android:text="Crime Description"

        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_below="@id/desc"
        android:textSize="15sp"
        android:layout_alignStart="@+id/desc"
        android:text="Change Status:"
        android:layout_centerHorizontal="true"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:textColor="#ff0000"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status"
        android:layout_alignBottom="@+id/status"
        />

    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:id="@+id/updateBtn"
        android:layout_below="@+id/status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:text="Update"
        android:background="#cf1020"

        />
    <TextView
        android:layout_width="300sp"
        android:layout_marginTop="50sp"
        android:layout_height="wrap_content"
        android:id="@+id/warning"
        android:layout_below="@id/updateBtn"
        android:text="*Warning*: You are about to update the status of the Crime"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#ff0000"
        />

</RelativeLayout>